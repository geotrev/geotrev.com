{
  "name": "geotrev.com",
  "version": "1.0.0",
  "description": "",
  "main": "none",
  "scripts": {
    "build": "npm run css:build && postcss assets/css/styles.css -u autoprefixer --replace && npm run js:build",
    "css:build": "node-sass src/css/styles.scss assets/css/styles.css",
    "css:watch": "npm run css:build -- -w",
    "js:build": "babel src/js/scripts.js --out-dir assets/js/ --no-comments --presets=@babel/preset-env",
    "js:watch": "npm run js:build -- -w"
  },
  "author": "George Treviranus",
  "license": "none",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.1.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1"
  },
  "browserslist": [
    "edge >= 16",
    "firefox >= 52",
    "chrome >= 58",
    "safari >= 10",
    "android >= 5",
    "ios >= 9",
    "not ie 11",
    "not op_mini all"
  ],
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "never"
  }
}
